@model IEnumerable<CoWorking.Models.Event>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Data Event</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/Content/css/bootstrap.min.css" rel='stylesheet' type='text/css' />
    <!-- Custom Theme files -->
    <link href="~/Content/datatable/dataTables.bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet">
    <script src="~/Content/js/jquery.min.js"> </script>
    <!-- Mainly scripts -->
    <script src="~/Content/js/jquery.metisMenu.js"></script>
    <script src="~/Content/js/jquery.slimscroll.min.js"></script>
    <!-- Custom and plugin javascript -->
    <link href="~/Content/css/custom.css" rel="stylesheet">
    <script src="~/Content/js/custom.js"></script>

    
</head>

<body>

    <div id="wrapper">
        <!----->
        <nav class="navbar-default navbar-static-top" role="navigation" style="background-color:#fff">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <h1> <a class="navbar-brand" href="index.html">CoWorking</a></h1>
            </div>

            <!--/.navbar-collapse -->
            <div class="clearfix">

            </div>

            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">

                        <li style="margin-bottom:7px">
                            <a href="/Home/Dashboard" class=" hvr-bounce-to-right"><i class="fa fa-dashboard nav_icon "></i><span class="nav-label">Dashboards</span> </a>
                        </li>

                        <li style="margin-bottom:7px">
                            <a href="/Home/FormAcara" class=" hvr-bounce-to-right"><i class="fa fa-edit nav_icon"></i> <span class="nav-label">Form Event</span> </a>
                        </li>

                        <li style="margin-bottom:7px">
                            <a href="/Home/DataEvent" class=" hvr-bounce-to-right"><i class="fa fa-tasks nav_icon"></i> <span class="nav-label">Data Event</span> </a>
                        </li>


                        <li style="margin-bottom:7px">
                            <a href="/Home/FormKomunitas" class=" hvr-bounce-to-right"><i class="fa fa-edit nav_icon"></i> <span class="nav-label">Form Komunitas</span> </a>
                        </li>

                        <li style="margin-bottom:7px">
                            <a href="/Home/DataKomunitas" class=" hvr-bounce-to-right"><i class="fa fa-users nav_icon"></i> <span class="nav-label">Data Komunitas</span> </a>
                        </li>

                        <li style="margin-bottom:7px">
                            <a href="/Home/Logout" class=" hvr-bounce-to-right"><i class="fa fa-sign-out nav_icon"></i> <span class="nav-label">Logout</span> </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="content-main">

                <!--banner-->
                <div class="banner">
                    <h2>
                        <a href="index.html">Home</a>
                        <i class="fa fa-angle-right"></i>
                        <span>Data Event</span>
                    </h2>
                </div>
                <!--//banner-->
                <!--grid-->
                <div class="grid-system">
                    <!---->
                    <div class="horz-grid">
                        <div class="grid-hor">

                            <h3>Data Event</h3><hr /><br />
                            <table id="example1" class="table table-striped ">

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <th style="color: #57606f;" class="col-md-3">Nama Event</th>
                                        <th style="color: #57606f;" class="col-md-1">Jenis Event</th>
                                        <th style="color: #57606f;" class="col-md-2">Waktu Event</th>

                                        <tr>
                                            <td style="color: #57606f;" class="col-md-3">
                                                @Html.DisplayFor(modelItem => item.nama_event)
                                            </td>
                                            <td style="color: #57606f;" class="col-md-1">
                                                @Html.DisplayFor(modelItem => item.jenis_event)
                                            </td>
                                            <td style="color: #57606f;" class="col-md-2">
                                                @Html.DisplayFor(modelItem => item.waktu_event)
                                            </td>

                                        </tr>
                                        <th style="color: #57606f;" class="col-md-4">Deskripsi</th>
                                        <th style="color: #57606f;" class="col-md-4">Gambar Event</th>
                                        <th style="color: #57606f;" class="col-md-2">Aksi</th>

                                        <tr>
                                            <td class="col-md-4"><img src="@Url.Content(item.pathFile)" width="350px" height="150px" /></td>
                                            <td class="col-md-4">@Html.DisplayFor(modelItem => item.deskripsi)</td>
                                            <td class="col-md-2">
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id_event }, new { @class = "btn btn-warning" })
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id_event }, new { @class = "btn btn-danger" })
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                        </div>
                    </div>
                </div>
                    <div class="copy">
                        <p> &copy; 2018 CoWorking Space. All Rights Reserved </p>
                    </div>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>


    <script src="~/Content/js/jQuery-2.1.4.min.js"> </script>
    <script src="~/Content/js/bootstrap.min.js"> </script>
    <script src="~/Content/datatable/jquery.dataTables.min.js"> </script>
    <script>
        $(function () {
            $("#example1").DataTable();
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });
    </script>
</body>
</html>

